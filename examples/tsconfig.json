{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "dep-fence": ["../src/index.ts"],
      "dep-fence/*": ["../src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}

